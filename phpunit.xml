<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="tests/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="Test App">
            <directory suffix=".php">./tests/App</directory>
        </testsuite>
        <testsuite name="Test Core">
            <directory suffix=".php">./tests/Core</directory>
        </testsuite>
        <testsuite name="Test Acceptance">
            <directory suffix=".php">./tests/Acceptance</directory>
        </testsuite>
    </testsuites>
</phpunit>